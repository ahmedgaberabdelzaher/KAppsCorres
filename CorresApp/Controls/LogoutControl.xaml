<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:translator="clr-namespace:CorresApp.Helpers"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CorresApp.Controls.LogoutControl">
    <ContentView.Content>
        <Label Text="{translator:Translate LogOut}" BackgroundColor="Transparent" TextColor="White" FontFamily="Montserrat-SemiBold.ttf" HorizontalOptions="EndAndExpand">
                          <Label.GestureRecognizers>
                              <TapGestureRecognizer Command="{Binding SignOutCommand}"></TapGestureRecognizer>
                          </Label.GestureRecognizers>
                      </Label>
    </ContentView.Content>
</ContentView>
